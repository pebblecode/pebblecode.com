source :rubygems

gem 'rake'
gem "sinatra"
gem 'thin'

# Asset packaging
gem 'sinatra-assetpack', :require => 'sinatra/assetpack'

# Front end
gem "haml"
gem "sass"
gem "compass"

# For production deployment
gem 'heroku'

group :development, :test do
  # Servers
  gem 'shotgun'
  gem 'foreman'
  gem 'ruby-debug19', :require => 'ruby-debug'
end