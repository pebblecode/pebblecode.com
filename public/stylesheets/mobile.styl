/*

  Mobile stylesheet

*/

/* General styles
-----------------------------------------------------------------------------*/

body
  font-size: .5em
  .wrapper
    width: 100%
    

/* Typography
-----------------------------------------------------------------------------*/

h1
  font-size 3em

h2
  font-size 2em

h3
  font-size 1.5em

h4
  font-size 1em


/* Header
-----------------------------------------------------------------------------*/

header
  position relative
  nav
    text-align center
    height auto
    padding 1%
    h1
      float none
    ul
      float none
      width 270px
      font-size 2em
      margin 5px auto 0 
      li
        display inline
        padding 0 5%
        a
          float right
          margin-left: 0

/* Footer
-----------------------------------------------------------------------------*/

footer
  margin-top 0
  width 90%
  padding 15px 5% 0

/* Content
-----------------------------------------------------------------------------*/

.content
  width 90%
  padding 5%
  margin-top 0
      
/* Home page
---------------------------------------*/

.home-page
  .content
    margin 0
  h1.title
    font-size 3em
    margin-bottom 20px
  
  ul.work-listing
    li
      width 96%
      
      &.odd
        float none
        clear both

      &.even
        float none
        clear both


/* Work page
---------------------------------------*/

.work-page
  h1
    margin-bottom 10px
    
  ul.work-intro 
    li
      float none
      width 100%
      margin-left 0 !important
      margin-right 0 !important
      
      &.v-space
        display none
      
  ul.work-listing
    li
      float left
      clear both
      height auto
      min-height 0
      width 96%
      margin-bottom 7%
      
      h3
        font-size: 2.5em


/* About page
---------------------------------------*/

.about-page
  ul.columns
    li
      width 100%
      
      &.odd, &.even
        float none
        clear both
        border none
  
  .about-odd
    border none !important
    
  .pebbleit
    width 100%
         
  ul.who
    li      
      width 100%
      margin 5px 0 !important
      &:last-child 
        margin 5px 0 15px !important
      img
        height 50px
      
      h2
        font-size 2em
        
  .map
    float none
    width 100%
    margin 10px 0 15px
    
  .address
    width 100%
