@import 'mixins/css3'

/* Reset
Based on http://meyerweb.com/eric/thoughts/2008/01/15/resetting-again/
Removed elements not supported in HTML5
-----------------------------------------------------------------------------*/
html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strike, strong, sub, sup, var,
b, i,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td 
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  vertical-align baseline
  
/* 
Trigger the new HTML5 block level elements in to the correct content flow
-----------------------------------------------------------------------------*/
article, aside, dialog, figure, 
footer, header, hgroup, menu, 
nav, section  
  display block 
      

/* Set up document
-----------------------------------------------------------------------------*/
body
  font 62.5%/1.5 Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  color #7A7A7A
  

.wrapper
  width 100%
  text-align left 
  margin-left auto 
  margin-right auto
  background #fff
 
.content
  clear both
  width 96%
  padding 0 2%
  margin-top 50px

/* Typography
-----------------------------------------------------------------------------*/
h1
  font 62.5%/1.5 ff-meta-web-pro, Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  font-weight bold
  font-size 4.5em
  margin-left 2%
  float left
  a
    color #fff
    text-decoration none

h2 
  font 62.5%/1.5 ff-meta-web-pro, Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  font-weight bold
  font-size: 1.8em
  line-height 1em
  margin-bottom 1em

h3 
  font 62.5%/1.5 ff-meta-web-pro, Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  font-weight bold
  font-size 1.6em
  line-height 1.13em
  margin-bottom 1.13em

h4 
  font 62.5%/1.5 ff-meta-web-pro, Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  font-weight bold
  font-size 5em
  line-height 0.3em
  margin-bottom 0.9em
  clear left

h5 
  font-size 1.3em
  line-height 1.38em
  margin-bottom 1.38em

h6 
  font-size 1.2em
  line-height 1.5em
  margin-bottom 1.5em 

p, q, cite, address, ul, ol, dl
  font-size 1.2em
  line-height 1.5em
  margin-bottom 1.5em
  

li, dd, dt
  font-size 1em 

a
  text-decoration underline
  color #3333cc
  outline none

a:hover
  text-decoration none

code, samp, dfn, kbd, var, acronym, ins, del

abbr 
  speak spell-out

acronym 
  speak normal


/* Header
-----------------------------------------------------------------------------*/
header
  position fixed
  top 0
  width 100%
  background none
  
  h1 a 
    display block
    background transparent url('/images/logo.png') no-repeat 0 0
    margin 12px 0 0 0
    width 300px
    height 42px
    text-indent -9999px
    outline none 
  
  // border-bottom 10px solid rgba(0,0,0,.1)
  nav 
    float right
    height 60px
    width 100%
    padding 10px 0 10px 0
    ul 
      list-style none
      width 50%
      float right
      margin-bottom 0
      padding-bottom 0
      margin 15px 2% 0 0
      text-align right
      li 
        display inline
        margin-bottom 0
        padding-bottom 0
        
        a
          display block
          float right
          margin-left 5%

          // Using image replacement technique #6 from http://css-tricks.com/630-css-image-replacement/
          overflow hidden
          height 0
          padding-top 28px
        
          &.blog
            background transparent url('/images/blog.png') no-repeat 0 0
            width 80px
            
            &:hover
              background-position: 0 -38px;  
      
          &.about
            background transparent url('/images/about.png') no-repeat 0 0
            width 95px
          
            &:hover
              background-position: 0 -38px;
        
          &.work
            background transparent url('/images/work.png') no-repeat 0 0
            width 87px
            
            &:hover
              background-position: 0 -38px;
          

/* Nav Shadow
-----------------------------------------------------------------------------*/

.navshadow
  width 100%
  height 5px  
  clear: both;
  
  background-color rgba(0, 0, 0, 0.1)
  .no-rgba &
    background-color #eeeeee



/* Footer
-----------------------------------------------------------------------------*/
footer
  float left
  clear both
  width 96%
  height 60px
  padding 2%
  color #C2C2C2
  margin-top 150px
  background-color #F2F2F2
  text-shadow white 0 1px 1px
  ul 
    list-style none



@media only screen and (max-width: 600px) 
  body
    font-size: .5em
    .wrapper
      width: 100%
    header
      position relative
      nav
        text-align center
        height auto
        padding 1%
        h1
          float none
        ul
          float left
          width 100%
          font-size 2em
          li
            display inline
            padding 0 5%
            a
              float right
              margin-left: 0
    .content
      width 90%
      padding 5%
      margin-top 0
      
      ul.home-work
        list-style none
        li
          width 96%
          float none
          padding 2% 2% 2% 2%
