@import 'mixins/css3'
@import '/fancybox/jquery.fancybox-1.3.4.css'

/*
Variables
-----------------------------------------------------------------------------*/

footer_height = 95px

// Colours
pebble_pink = #e74679
pebble_purple = #a1579c
pebble_blue = #419fda
pebble_aqua = #42b8be
pebble_green = #adca3a
pebble_orange = #f7ae35

pebble_gray = #7A7A7A

/* Reset
Based on http://meyerweb.com/eric/thoughts/2008/01/15/resetting-again/
Removed elements not supported in HTML5
-----------------------------------------------------------------------------*/

html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strike, strong, sub, sup, var,
b, i,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td 
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  vertical-align baseline


/*
Sticky footer (http://ryanfait.com/resources/footer-stick-to-bottom-of-page/)
-----------------------------------------------------------------------------*/

html, body
  height 100%


/* 
Trigger the new HTML5 block level elements in to the correct content flow
-----------------------------------------------------------------------------*/

article, aside, dialog, figure, 
footer, header, hgroup, menu, 
nav, section  
  display block


/* General styles
-----------------------------------------------------------------------------*/

body
  font 62.5%/1.5 Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  color pebble_gray

.wrapper
  width 100%
  text-align left 
  margin-left auto 
  margin-right auto
  background #fff
  
  height 100%
  
  .ie7 & {
    padding-top 100px
  }

p, q, cite, address, ul, ol, dl
  font-size 1.2em
  line-height 1.5em
  margin-bottom 1em
  list-style none
  

li, dd, dt
  font-size 1em 

a
  text-decoration none
  color #3333cc
  outline none

a:hover
  text-decoration underline

abbr 
  speak spell-out

acronym 
  speak normal

hr
  clear both
  border none
  
  
  
/* Typography
-----------------------------------------------------------------------------*/

// Listed here, so that it is easy to pull out for typekit font loading
h1, h2, h3, h4, .address p, .body .title a, .meta .author a, .blog .content #posts .post .body-wrapper .comments-wrapper #dsq-content h3, .blog .content #posts .post .body-wrapper .comments-wrapper .dsq-commenter-name
  font-family ff-meta-web-pro, Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif

h1
  font-weight bold
  font-size 5em
  line-height 1.5em

h2
  font-weight bold
  font-size 4em
  line-height 1.5em

h3
  font-weight bold
  font-size 2em
  line-height 1.5em

h4
  font-weight bold
  font-size 1em
  line-height 1.5em

/* Header
-----------------------------------------------------------------------------*/

header
  position fixed
  top 0
  left 0
  width 100%
  background none
  z-index 1000
  
  h1
    margin-left 2%
    float left
     
    a 
      display block
      background transparent url('/images/logo.png') no-repeat 0 0
      margin 12px 0 0 0
      width 300px
      height 42px
      text-indent -9999px
      outline none 
  
  // border-bottom 10px solid rgba(0,0,0,.1)
  nav 
    float right
    height 60px
    width 100%
    padding 10px 0 10px 0
    background-color pebble_blue
    ul 
      width 50%
      float right
      margin-bottom 0
      padding-bottom 0
      margin 15px 2% 0 0
      text-align right
      li 
        display inline
        margin-bottom 0
        padding-bottom 0
        
        a
          display block
          float right
          margin-left 5%

          // Using image replacement technique #6 from http://css-tricks.com/630-css-image-replacement/
          overflow hidden
          height 0
          padding-top 28px
        
          &.blog
            background transparent url('/images/blog.png') no-repeat 0 0
            width 80px
            
            &:hover
              background-position: 0 -38px;  
      
          &.about
            background transparent url('/images/about.png') no-repeat 0 0
            width 95px
          
            &:hover
              background-position 0 -38px
        
          &.work
            background transparent url('/images/work.png') no-repeat 0 0
            width 87px
            
            &:hover
              background-position 0 -38px

  .navshadow
    width 100%
    height 5px  
    clear both

    background-color rgba(0, 0, 0, 0.1)
    .no-rgba &
      background-color #eeeeee


/* Content
-----------------------------------------------------------------------------*/

.content
  clear both
  width 96%
  padding 0 2%

  min-height 100%
  height auto !important
  height 100%
  margin 100px auto (- footer_height)
  
  .push-footer
    height footer_height

/* Home page
---------------------------------------*/

.home-page
  h1.title
    font-size 6em
    padding 7% 0 0 5
    margin-bottom 40px
    color pebble_gray
    text-align center
    line-height 1em
    

  ul.work-listing
    li
      height auto
      
  a
    color pebble_gray
    
  a:hover
    text-decoration none
  
  .content
    margin-top 120px
      
/* Work page
-----------------------------------------*/

.work-page

  h3
    margin-bottom 5px
    line-height 1em
  
  ul.work-intro
    margin-bottom 40px
    min-height 140px
    width 100%
    
    a
      color pebble_blue
    
    li
      width 30%
      float left
      
      &.work-first
        margin-right 2.4%
        
      &.work-second
        margin 0 2.4%
        
      &.work-third
        margin-left 2.4%
        
      &.v-space
        width 2px
        height 100%
        min-height 140px
        background-color pebble_pink

  ul.work-listing
    li
      height auto
      min-height 290px
      
      .images
        li
          min-height 0
          width auto
          float left
          margin-top 20px
          padding 0
          font-size 1.2em
      
  .screenshot
    margin-right 20px
    font-size 1.2em
    
  .thumb
    width 100px
    height 60px
    float left
    margin-right 20px 
    text-indent -9999px
    
  a:hover.thumb
    height 45px


/* About page
---------------------------------------*/

