/* Footer
-----------------------------------------------------------------------------*/

footer
  float left
  clear both
  width 96%
  height footer_height
  padding 30px 2%
  color #C2C2C2
  margin-top 150px
  background-color #F2F2F2
  text-shadow white 0 1px 1px
  a
    color #848484
  span
    color #848484

    
