@import 'mixins/css3'

/* Reset
Based on http://meyerweb.com/eric/thoughts/2008/01/15/resetting-again/
Removed elements not supported in HTML5
-----------------------------------------------------------------------------*/

html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strike, strong, sub, sup, var,
b, i,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td 
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  vertical-align baseline


/*
Sticky footer (http://ryanfait.com/resources/footer-stick-to-bottom-of-page/)
-----------------------------------------------------------------------------*/

html, body
  height 100%


/* 
Trigger the new HTML5 block level elements in to the correct content flow
-----------------------------------------------------------------------------*/

article, aside, dialog, figure, 
footer, header, hgroup, menu, 
nav, section  
  display block


/* General styles
-----------------------------------------------------------------------------*/

body
  font 62.5%/1.5 Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  color #7A7A7A

.wrapper
  width 100%
  text-align left 
  margin-left auto 
  margin-right auto
  background #fff
  
  height 100%

p, q, cite, address, ul, ol, dl
  font-size 1.2em
  line-height 1.5em
  margin-bottom 1em
  list-style none
  

li, dd, dt
  font-size 1em 

a
  text-decoration none
  color #3333cc
  outline none

a:hover
  text-decoration underline

code, samp, dfn, kbd, var, acronym, ins, del

abbr 
  speak spell-out

acronym 
  speak normal

hr
  clear both
  border none
  
  
  
/* Typography
-----------------------------------------------------------------------------*/

h1
  font 62.5%/1.5 ff-meta-web-pro, Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  font-weight bold
  font-size 5em

h2 
  font 62.5%/1.5 ff-meta-web-pro, Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  font-weight bold
  font-size 4em

h3 
  font 62.5%/1.5 ff-meta-web-pro, Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  font-weight bold
  font-size 2em

h4 
  font 62.5%/1.5 ff-meta-web-pro, Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  font-weight bold
  font-size 1em

/* Header
-----------------------------------------------------------------------------*/

header
  position fixed
  top 0
  width 100%
  background none
  
  h1
    margin-left 2%
    float left
     
    a 
      display block
      background transparent url('/images/logo.png') no-repeat 0 0
      margin 12px 0 0 0
      width 300px
      height 42px
      text-indent -9999px
      outline none 
  
  // border-bottom 10px solid rgba(0,0,0,.1)
  nav 
    float right
    height 60px
    width 100%
    padding 10px 0 10px 0
    ul 
      width 50%
      float right
      margin-bottom 0
      padding-bottom 0
      margin 15px 2% 0 0
      text-align right
      li 
        display inline
        margin-bottom 0
        padding-bottom 0
        
        a
          display block
          float right
          margin-left 5%

          // Using image replacement technique #6 from http://css-tricks.com/630-css-image-replacement/
          overflow hidden
          height 0
          padding-top 28px
        
          &.blog
            background transparent url('/images/blog.png') no-repeat 0 0
            width 80px
            
            &:hover
              background-position: 0 -38px;  
      
          &.about
            background transparent url('/images/about.png') no-repeat 0 0
            width 95px
          
            &:hover
              background-position 0 -38px
        
          &.work
            background transparent url('/images/work.png') no-repeat 0 0
            width 87px
            
            &:hover
              background-position 0 -38px

  .navshadow
    width 100%
    height 5px  
    clear both

    background-color rgba(0, 0, 0, 0.1)
    .no-rgba &
      background-color #eeeeee


/* Content
-----------------------------------------------------------------------------*/

.content
  clear both
  width 96%
  padding 0 2%

  min-height 100%
  height auto !important
  height 100%
  margin 100px auto -60px
  
  .push-footer
    height 60px

/* Home page
---------------------------------------*/

.home-page
  h1.title
    font-size 6em
    padding 7% 0 0 5
    margin-bottom 30px
    color #7A7A7A
    text-align center
    

  ul.work-listing
    li
      height auto
      
  a
    color #7A7A7A
    
  a:hover
    text-decoration none
      
      
/* Work page
---------------------------------------*/

.work-page
  
  ul.about-intro
    margin-bottom 40px
    
    a
      color #419fda
    
    li
      width 49%
      &.odd
        float left
        clear left
      &.even
        float right 
        clear right
      

/* About page
---------------------------------------*/

.about-page
  ul.columns
    li
      width 47%
      margin-bottom 3%
      &:nth-child(odd)
        float left
        clear left
        padding-right 3%
        border-right 5px solid #419fda
      &:nth-child(even)
        float right
        clear right

