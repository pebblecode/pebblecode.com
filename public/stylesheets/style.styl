    margin-bottom 5px

  ul.who
    h2
      font-size 3em
    
    h3
      margin-top -10px 
    li
      margin-bottom 40px
      width 32%
      float left
      &.toby
        background url('/images/tile_blue.gif')
        span
          color pebble_blue
      &.george
        margin 0 2%
        background url('/images/tile_green.gif')
        span
          color pebble_green    
      &.alex
        background url('/images/tile_orange.gif')
        span
          color pebble_orange 
      &.mark
        background url('/images/tile_aqua.gif')
        span
          color pebble_aqua
      &.greg
        margin 0 2%
        background url('/images/tile_purple.gif')
        span
          color pebble_purple    
      &.vince
        background url('/images/tile_pink.gif')
        span
          color pebble_pink
      &.tak
        background url('/images/tile_blue.gif')
        span
          color pebble_blue
      &.joseph
        margin 0 2%
        background url('/images/tile_green.gif')
        span
          color pebble_green    
      &.gayle
        background url('/images/tile_orange.gif')
        span
          color pebble_orange                       
          
    img
      float left
      width 150
      height 200px 
      margin-right 10px 
      
    

  ul.columns
    li
      width 47%
      &.odd
        float left
        clear left
        padding-right 3%
        border-right 2px solid pebble_blue
      &.even
        float right
        clear right
        
.map
  width 60%
  margin 20px 0
  float left

.address
  width 30%
  padding 10px 10px 10px 2%
  float left
  p
    font-weight bold
    font-size 2em
    margin 0
    a
      color pebble_pink


/* Blog pages
---------------------------------------*/

.blog
  .content
    width 960px
    
    #intro
      width 810px
      margin-left 150px
      .title
        font-size 45px
        padding 30px 0 40px
        text-align center
        line-height 1em
        a
          color pebble_gray

      .subtitle
        font-size 20px
        padding 0
        margin-bottom 30px
        color pebble_gray
        text-align center
        line-height 1em
    
    #tag-page-title
      font-size 30px
      line-height 35px
    
    #posts
      .post
        position relative
        margin-bottom 20px
        z-index 0
        
        pre
          margin-bottom 20px
        code
          font-size: 14px
          line-height 18px
          overflow auto
        
        // Coloured elements
        colored_elements(color_name, color_value)
          .title a,
          .body a,
          .body h3,
          .meta .author a,
          .meta .tags a,
          .dsq-comment-footer .dsq-comment-meta a,
          .dsq-comment-header .dsq-commenter-name,
          .dsq-comment-actions a,
          .dsq-collapsed-count,
          #dsq-subscribe a,
          #dsq-account-dropdown a
            color color_value
          .body-wrapper
            border-left 5px solid color_value
            background transparent url('/images/tile_' + color_name + '.gif') repeat 0 0
          .comments-wrapper,
          .dsq-comment,
          .dsq-post-tools
            border-top 1px dotted color_value
          #dsq-content .dsq-textarea .dsq-textarea-background,
          .dsq-post-tools .dsq-post-as .dsq-button 
            border 1px solid color_value
          code
            background transparent url('/images/trans_tile_' + color_name + '.png') repeat 0 0
        
        // Default colour is blue
        colored_elements('blue', pebble_blue)
        
        &.pebble_aqua
          colored_elements('aqua', pebble_aqua)
        &.pebble_pink
          colored_elements('pink', pebble_pink)
        &.pebble_blue
          colored_elements('blue', pebble_blue)
        &.pebble_green
          colored_elements('green', pebble_green)
        &.pebble_orange
          colored_elements('orange', pebble_orange)
        &.pebble_purple
          colored_elements('purple', pebble_purple)
        // End Coloured elements
        
        .body-wrapper
          margin-left 150px
          padding 5px 10px 10px
          
          .body
            h3
              font-size 20px
              
            p
              font-size 16px
              line-height 22px
          
            .title
              a
                font-size 26px
                padding 10px 0 20px
                line-height 1em
          
          .share-this-wrapper
            margin 40px 0 20px
          
          .comments-wrapper
            padding-top 10px
            
            #dsq-content h3
              margin-bottom 0.5em
          
            .dsq-comment-body
              padding-left 0
            
            .dsq-textarea-reply
              margin-left 0
            
            .dsq-textarea .dsq-textarea-background
              background white
              
              -moz-box-shadow none
              -webkit-box-shadow none
              box-shadow none
              
            .dsq-post-tools .dsq-post-as .dsq-button 
              -moz-box-shadow none
              -webkit-box-shadow none
              box-shadow none
            
            #dsq-content .dsq-comment-text
              color #525252
              
            .dsq-comment-header
              background none
              border none
              padding-left 0
            
            .dsq-commenter-name
              font-size 24px
              line-height: 30px
              
            .dsq-comment-comment
              padding-top 10px
            
            .dsq-avatar
              display none
              
            #dsq-content .dsq-attach-media .dsq-attach-media-container span
              top 0
            
        
        .meta
          text-align right
          position absolute
          top -9px
          left 0
          width 140px
        
          .author
            margin-bottom 5px
          
            a
              font-size 20px
              font-weight bold
              margin-top 18px
              display block
          
          .published-date
            line-height 17px
            .date-month
              font-weight bold
              display block
            
            .year
              display block
            
          .tags
            line-height 17px
            margin-top 10px
          
            ul
              margin 0
              padding 0
              line-height 1em
            
              li
                display inline
                margin 0
                padding 0
              
                &:after
                  content ","
                
                &:last-child:after
                  content ""
                
                .ie8 &:after
                  content ""
                
                a
                  font-size 14px
                  line-height 18px
                    
            
    #blog-navigation
      font-size 16px
      line-height 16px
      margin 60px 0 0 150px
      width 810px
      
      li
        float left
        
        a
          color pebble_blue
          
      .prev
        width 50%
      
      .next
        width 50%
        text-align right

