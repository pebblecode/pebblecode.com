/* Header
-----------------------------------------------------------------------------*/

header
  position fixed
  top 0
  width 100%
  background none
  
  h1
    margin-left 2%
    float left
     
    a 
      display block
      background transparent url('/images/logo.png') no-repeat 0 0
      margin 12px 0 0 0
      width 300px
      height 42px
      text-indent -9999px
      outline none 
  
  // border-bottom 10px solid rgba(0,0,0,.1)
  nav 
    float right
    height 60px
    width 100%
    padding 10px 0 10px 0
    ul 
      list-style none
      width 50%
      float right
      margin-bottom 0
      padding-bottom 0
      margin 15px 2% 0 0
      text-align right
      li 
        display inline
        margin-bottom 0
        padding-bottom 0
        
        a
          display block
          float right
          margin-left 5%

          // Using image replacement technique #6 from http://css-tricks.com/630-css-image-replacement/
          overflow hidden
          height 0
          padding-top 28px
        
          &.blog
            background transparent url('/images/blog.png') no-repeat 0 0
            width 80px
            
            &:hover
              background-position: 0 -38px;  
      
          &.about
            background transparent url('/images/about.png') no-repeat 0 0
            width 95px
          
            &:hover
              background-position: 0 -38px;
        
          &.work
            background transparent url('/images/work.png') no-repeat 0 0
            width 87px
            
            &:hover
              background-position: 0 -38px;

  .navshadow
    width 100%
    height 5px  
    clear: both;

    background-color rgba(0, 0, 0, 0.1)
    .no-rgba &
      background-color #eeeeee


