      background url('/images/tile_blue.gif')
      span
        color pebble_blue
      a
        color pebble_blue
  
    &.woohoo
      border-left 5px solid pebble_green
      background url('/images/tile_green.gif')
      span
          color pebble_green
      a
        color pebble_green

    &.aljazeera
      border-left 5px solid pebble_orange
      background url('/images/tile_orange.gif')
      span
          color pebble_orange
      a
        color pebble_orange
        

    &.takefive
      border-left 5px solid pebble_aqua
      background url('/images/tile_aqua.gif')
      span
          color pebble_aqua
      a
        color pebble_aqua
        

    &.ideapi
