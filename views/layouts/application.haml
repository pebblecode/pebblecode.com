          %li
            %span {
            %a{:href => "/people"} our people
            %span }
          %li
            %span {
            %a{:href => "/work"} our work
            %span }
          %li
            %span {
            %a{:href => "/products"} our products
            %span }
          %li
            %span {
            %a{:href => "/thoughts"} our thoughts
            %span }
    #wrap
      = yield
      #wrap-footer
    %footer
      %div
        %ul#contact
          %li.size0
            T:
            %a{:href => "tel:+44 20 3327 3940"} +44 20 3327 3940
          %li.size0
            E:
            %a{:href => "mailto:hello@pebblecode.com"} info@pebblecode.com
        %ul#social
          %li
            %a#facebook{:href => "http://www.facebook.com/pebblecode"} facebook
          %li
            %a#twitter{:href => "http://twitter.com/#!/pebblecode"} twitter
          %li
            %a#google-plus{:href => "https://plus.google.com/113628709817662471448/posts"} G+
