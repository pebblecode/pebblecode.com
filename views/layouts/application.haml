      %meta{:content => "width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;", :name => "viewport"}/
  %body{:class => @page_name}
    %header.background-random
      %nav
        %a{:href => "/"}
          %img{:alt => "pebble{code} logo", :src => "/images/logo.png"}/
